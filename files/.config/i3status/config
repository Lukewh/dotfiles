general {
	colors = true
	interval = 10
	color_good = "#79ff81"
	color_degraded = "#fafe7c"
	color_bad = "#ff7770"
}

order += "volume master"
order += "battery 0"
order += "tztime local"

volume master {
	format = " %volume"
	format_muted = " muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

battery 0 {
	format = "%status %percentage %remaining"
	hide_seconds = true
	integer_battery_capacity = true
	last_full_capacity = true
	status_chr = "C"
	status_bat = "B"
	status_full = "F"
}

tztime local {
	format = "%I:%M%p %d-%m-%Y"
}
