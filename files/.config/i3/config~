# screen layouts
set $displayMode "Set display mode [d]esk [l]aptop"
bindsym $mod+Shift+d mode $displayMode
mode $displayMode {
	bindsym d exec "\
		~/.screenlayout/desk.sh && ~/.config/i3/desk-workspace-layout.sh"\
		mode "default"
	bindsym l exec "\
		~/.screenlayout/laptop.sh"\
		mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# move workspaces to different displays
set $moveWorkspace "Move workspace to monitor with arrows"
bindsym $mod+Shift+o mode $moveWorkspace
mode $moveWorkspace {
	bindsym Left move workspace to output left
	bindsym Right move workspace to output right	

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $moveToWorkspace1 "/home/luke/.config/i3/switch-to-workspace.sh"

# url github mode
set $urlGithubMode "Repo: [b]uild.s.io [s]napcraft [v]anilla"
mode $urlGithubMode {
        bindsym b exec "firefox github.com/canonical-websites/build.snapcraft.io";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym s exec "firefox github.com/canonical-websites/snapcraft.io";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym v exec "firefox github.com/vanilla-framework/vanilla-framework";\
                exec $moveToWorkspace1;\
                mode "default"

        bindsym Return mode $urlMode
        bindsym Escape mode $urlMode
}

# run.demo.haus mode
set $rundemoMode "Demo: [s]tart [Return] Home"
mode $rundemoMode {
      bindsym s exec "firefox run.demo.haus/start";\
              exec $moveToWorkspace1;\
              mode "default"

      bindsym Return exec "firefox run.demo.haus";\
              exec $moveToWorkspace1;\
              mode "default"

      bindsym Escape mode $urlMode
}

# url mode
set $urlMode "URL: [0].0.0.0:8004 [g]ithub [j]enkins [r]un.demo.haus [s]napcraft staging.[S]napcraft docs.[v]anilla"
mode $urlMode {
        # I open websites often. Open them quicker
        bindsym 0 exec "firefox http://0.0.0.0:8004";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym g mode $urlGithubMode
        bindsym j exec "firefox https://jenkins.canonical.com/webteam/view/snapcraft.io/";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym r mode $rundemoMode
        bindsym s exec "firefox snapcraft.io";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym Shift+s exec "firefox staging.snapcraft.io";\
                exec $moveToWorkspace1;\
                mode "default"
        bindsym v exec "firefox docs.vanillaframework.io";\
                exec $moveToWorkspace1;\
                mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+u mode $urlMode
